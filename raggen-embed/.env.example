# API settings
API_TITLE=Raggen Embed API
API_DESCRIPTION=API for text embeddings and vector search
API_VERSION=1.0.0

# Model settings
MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
VECTOR_DIM=384

# Server settings
HOST=0.0.0.0
PORT=8001

# CORS settings (comma-separated lists)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://example.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Performance settings
BATCH_SIZE=32
MAX_TEXT_LENGTH=512
REQUEST_TIMEOUT=30

# Logging settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s [%(levelname)s] [%(name)s] [%(request_id)s] %(message)s

# FAISS settings
N_CLUSTERS=100
N_PROBE=10
N_RESULTS=5
FAISS_INDEX_PATH=/app/data/faiss/index.faiss
